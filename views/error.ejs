<section class="py-5 mt-5 min-vh-100 d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <!-- Animated Error -->
        <div class="mb-5 position-relative">
          <div class="error-animation mb-4">
            <i
              class="fas fa-exclamation-triangle fa-5x text-danger mb-3 pulse"
            ></i>
          </div>
          <h1 class="display-4 fw-bold text-gradient mb-3">Server Error</h1>
          <span
            class="badge bg-danger bg-opacity-10 text-danger px-4 py-2 rounded-pill mb-4"
          >
            <i class="fas fa-server me-2"></i>500 Internal Server Error
          </span>
        </div>

        <!-- Error Message -->
        <div class="card border-0 shadow-lg rounded-4 mb-5 glass-card">
          <div class="card-body p-5">
            <h3 class="fw-bold mb-4">Something went wrong on our end</h3>
            <p class="lead text-muted mb-4">
              <%= message || "We're experiencing some technical difficulties.
              Our team has been notified and is working to resolve the issue."
              %>
            </p>

            <!-- Error Details (only in development) -->
            <% if (typeof error !== 'undefined' && process.env.NODE_ENV !==
            'production') { %>
            <div class="mt-4 p-4 bg-light rounded-3 text-start">
              <h6 class="fw-bold text-danger mb-3">
                Error Details (Development Mode):
              </h6>
              <pre class="small text-muted mb-0"><%= error.stack %></pre>
            </div>
            <% } %>
          </div>
        </div>

        <!-- Suggestions -->
        <div class="row g-4 mb-5">
          <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center">
              <div class="card-body p-4">
                <div
                  class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                  style="width: 60px; height: 60px"
                >
                  <i class="fas fa-home text-primary fs-4"></i>
                </div>
                <h6 class="fw-bold mb-2">Go Home</h6>
                <p class="text-muted small mb-3">Return to the homepage</p>
                <a href="/" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-home me-1"></i>Home
                </a>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center">
              <div class="card-body p-4">
                <div
                  class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                  style="width: 60px; height: 60px"
                >
                  <i class="fas fa-folder-open text-success fs-4"></i>
                </div>
                <h6 class="fw-bold mb-2">View Projects</h6>
                <p class="text-muted small mb-3">Explore my work</p>
                <a href="/projects" class="btn btn-sm btn-outline-success">
                  <i class="fas fa-folder-open me-1"></i>Projects
                </a>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 text-center">
              <div class="card-body p-4">
                <div
                  class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                  style="width: 60px; height: 60px"
                >
                  <i class="fas fa-envelope text-info fs-4"></i>
                </div>
                <h6 class="fw-bold mb-2">Contact Me</h6>
                <p class="text-muted small mb-3">Report this issue</p>
                <a href="/contact" class="btn btn-sm btn-outline-info">
                  <i class="fas fa-envelope me-1"></i>Contact
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex gap-3 justify-content-center flex-wrap">
          <a href="/" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-home me-2"></i>Back to Home
          </a>
          <button
            onclick="window.history.back()"
            class="btn btn-outline-primary btn-lg"
          >
            <i class="fas fa-arrow-left me-2"></i>Go Back
          </button>
          <button
            onclick="window.location.reload()"
            class="btn btn-outline-secondary btn-lg"
          >
            <i class="fas fa-redo me-2"></i>Try Again
          </button>
        </div>

        <!-- Support Info -->
        <div class="mt-5 pt-5 border-top">
          <p class="text-muted small">
            If this problem persists, please contact me at
            <a
              href="mailto:mqcuong1603@gmail.com"
              class="text-primary text-decoration-none fw-medium"
            >
              mqcuong1603@gmail.com
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .error-animation {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .text-gradient {
    background: linear-gradient(135deg, #ef4444, #dc2626);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
